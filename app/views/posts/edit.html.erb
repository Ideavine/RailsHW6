<h1>Edit Post</h1>
<%= form_for([@user, @post]) do |f| %> 
 <%=f.label :post_title %>
  <%=f.text_field :post_title %>
   <%=f.label :post_text %>
  <%=f.text_field :post_text %>
 <%=f.submit :update %>
  <% end %>


<!-- #validates data -->
<% if @post.errors.full_messages.any? %>
  <ul>
  <% @post.errors.full_messages.each do |error_message| %>
    <li><%= error_message%></li> <br />
  <% end %>
 <ul>
<% end %>